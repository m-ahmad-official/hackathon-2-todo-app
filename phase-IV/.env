# Docker Compose Environment Variables
# Copy this file to .env and update values as needed

# PostgreSQL Database
POSTGRES_USER=todo_user
POSTGRES_PASSWORD=todo_password
POSTGRES_DB=todo_db

# Backend Configuration
BACKEND_DATABASE_URL=postgresql+psycopg2://todo_user:todo_password@postgres:5432/todo_db
SECRET_KEY=your-secret-key-change-in-production-minimum-32-chars
BETTER_AUTH_SECRET=your-better-auth-secret-change-in-production-minimum-32-chars
BETTER_AUTH_PUBLIC_KEY=
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=604800
DEBUG=False

# OpenAI Configuration
OPEN_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Frontend Configuration
NEXT_PUBLIC_API_BASE_URL=http://backend:8000/api/v1
FRONTEND_DATABASE_URL=./todo_app.db
